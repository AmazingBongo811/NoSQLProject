@model List<IncidentManagementSystem.Models.Ticket>
@{
    ViewData["Title"] = "My Tickets";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-ticket-alt me-2"></i>My Tickets</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">All My Tickets (@Model.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Title</th>
                                        <th>Status</th>
                                        <th>Priority</th>
                                        <th>Category</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ticket in Model.OrderByDescending(t => t.CreatedAt))
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-secondary">#@ticket.Id.Substring(ticket.Id.Length - 6)</span>
                                            </td>
                                            <td>
                                                <strong>@ticket.Title</strong>
                                                @if (!string.IsNullOrEmpty(ticket.Description) && ticket.Description.Length > 50)
                                                {
                                                    <br><small class="text-muted">@ticket.Description.Substring(0, 50)...</small>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-@(ticket.Status == TicketStatus.Open ? "warning" : 
                                                                          ticket.Status == TicketStatus.Resolved ? "success" : "secondary")">
                                                    @ticket.Status
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-@(ticket.Priority == TicketPriority.Critical ? "danger" : 
                                                                          ticket.Priority == TicketPriority.High ? "warning" : 
                                                                          ticket.Priority == TicketPriority.Medium ? "info" : "secondary")">
                                                    @ticket.Priority
                                                </span>
                                            </td>
                                            <td>@ticket.Category</td>
                                            <td>
                                                <small>@ticket.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("ViewTicket", "Dashboard", new { id = ticket.Id })" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye me-1"></i>View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No tickets found</h5>
                            <p class="text-muted">You haven't created any tickets yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
