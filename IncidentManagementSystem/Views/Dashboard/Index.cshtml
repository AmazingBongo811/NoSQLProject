@using IncidentManagementSystem.Models
@using IncidentManagementSystem.ViewModels
@model DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Welcome Section -->
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-body">
                    <h1 class="card-title">
                        <i class="fas fa-tachometer-alt text-primary me-2"></i>
                        Welcome, @Model.UserName!
                    </h1>
                    <p class="card-text text-muted">Here's an overview of your tickets and recent activity.</p>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="col-md-3">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.TotalTickets</h4>
                            <p class="mb-0">Total Tickets</p>
                        </div>
                        <i class="fas fa-tickets-alt fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.OpenTickets</h4>
                            <p class="mb-0">Open Tickets</p>
                        </div>
                        <i class="fas fa-exclamation-circle fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.ResolvedTickets</h4>
                            <p class="mb-0">Resolved</p>
                        </div>
                        <i class="fas fa-check-circle fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.UrgentTickets</h4>
                            <p class="mb-0">Urgent</p>
                        </div>
                        <i class="fas fa-fire fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Tickets -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-clock text-muted me-2"></i>
                        Recent Tickets
                    </h5>
                    <div>
                        <a href="@Url.Action("CreateTicket")" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus"></i> New Ticket
                        </a>
                        <a href="@Url.Action("MyTickets")" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-list"></i> View All
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.RecentTickets.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Title</th>
                                        <th>Status</th>
                                        <th>Priority</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ticket in Model.RecentTickets)
                                    {
                                        <tr>
                                            <td>
                                                <div class="text-truncate" style="max-width: 200px;">
                                                    @ticket.Title
                                                </div>
                                            </td>
                                            <td>
                                                @if (ticket.Status == TicketStatus.Open)
                                                {
                                                    <span class="badge bg-warning">@ticket.Status</span>
                                                }
                                                else if (ticket.Status == TicketStatus.Resolved)
                                                {
                                                    <span class="badge bg-success">@ticket.Status</span>
                                                }
                                                else if (ticket.Status == TicketStatus.Closed)
                                                {
                                                    <span class="badge bg-success">@ticket.Status</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@ticket.Status</span>
                                                }
                                            </td>
                                            <td>
                                                @if (ticket.Priority == TicketPriority.High || ticket.Priority == TicketPriority.Critical)
                                                {
                                                    <span class="badge bg-danger">@ticket.Priority</span>
                                                }
                                                else if (ticket.Priority == TicketPriority.Medium)
                                                {
                                                    <span class="badge bg-warning">@ticket.Priority</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">@ticket.Priority</span>
                                                }
                                            </td>
                                            <td>@ticket.CreatedAt.ToString("MM/dd/yyyy HH:mm")</td>
                                            <td>
                                                <a href="@Url.Action("ViewTicket", new { id = ticket.Id })" 
                                                   class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No tickets found. <a href="@Url.Action("CreateTicket")">Create your first ticket</a>.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>