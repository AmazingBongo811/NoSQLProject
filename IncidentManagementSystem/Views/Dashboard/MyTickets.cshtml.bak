@model List<IncidentManagementSystem.Models.Ticket>
@{
    ViewData["Title"] = "My Tickets";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-ticket-alt me-2 text-primary"></i>My Tickets
                    </h2>
                    <p class="text-muted mb-0">Manage and track all your submitted tickets</p>
                </div>
                <div>
                    <a asp-action="CreateTicket" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Create New Ticket
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- Filter and Search Bar -->
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                    <input type="text" id="searchInput" class="form-control" placeholder="Search tickets by title or description...">
                </div>
            </div>
            <div class="col-md-3">
                <select id="statusFilter" class="form-select">
                    <option value="">All Statuses</option>
                    <option value="Open">Open</option>
                    <option value="In Progress">In Progress</option>
                    <option value="Resolved">Resolved</option>
                    <option value="Closed">Closed</option>
                </select>
            </div>
            <div class="col-md-3">
                <select id="priorityFilter" class="form-select">
                    <option value="">All Priorities</option>
                    <option value="High">High Priority</option>
                    <option value="Medium">Medium Priority</option>
                    <option value="Low">Low Priority</option>
                </select>
            </div>
        </div>

        <!-- Tickets Table -->
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="ticketsTable">
                        <thead class="table-light">
                            <tr>
                                <th>Ticket #</th>
                                <th>Title</th>
                                <th>Status</th>
                                <th>Priority</th>
                                <th>Category</th>
                                <th>Created</th>
                                <th>Updated</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ticket in Model)
                            {
                                <tr data-status="@ticket.Status" data-priority="@ticket.Priority">
                                    <td>
                                        <span class="fw-bold text-primary">#@ticket.Id.Substring(0, 8)</span>
                                    </td>
                                    <td>
                                        <div class="fw-medium">@ticket.Title</div>
                                        <div class="text-muted small text-truncate" style="max-width: 300px;">
                                            @ticket.Description
                                        </div>
                                    </td>
                                    <td>
                                        @if (ticket.Status == "Open")
                                        {
                                            <span class="badge bg-warning">
                                                <i class="fas fa-clock me-1"></i>@ticket.Status
                                            </span>
                                        }
                                        else if (ticket.Status == "In Progress")
                                        {
                                            <span class="badge bg-info">
                                                <i class="fas fa-cog me-1"></i>@ticket.Status
                                            </span>
                                        }
                                        else if (ticket.Status == "Resolved")
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>@ticket.Status
                                            </span>
                                        }
                                        else if (ticket.Status == "Closed")
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-lock me-1"></i>@ticket.Status
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-light text-dark">@ticket.Status</span>
                                        }
                                    </td>
                                    <td>
                                        @if (ticket.Priority == "High")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-exclamation-triangle me-1"></i>High
                                            </span>
                                        }
                                        else if (ticket.Priority == "Medium")
                                        {
                                            <span class="badge bg-warning">
                                                <i class="fas fa-exclamation-circle me-1"></i>Medium
                                            </span>
                                        }
                                        else if (ticket.Priority == "Low")
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-info-circle me-1"></i>Low
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@ticket.Priority</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(ticket.Category))
                                        {
                                            <span class="badge bg-light text-dark">@ticket.Category</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="small">
                                            <div>@ticket.CreatedAt.ToString("MMM dd, yyyy")</div>
                                            <div class="text-muted">@ticket.CreatedAt.ToString("HH:mm")</div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (ticket.UpdatedAt.HasValue)
                                        {
                                            <div class="small">
                                                <div>@ticket.UpdatedAt.Value.ToString("MMM dd, yyyy")</div>
                                                <div class="text-muted">@ticket.UpdatedAt.Value.ToString("HH:mm")</div>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">-</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="ViewTicket" asp-route-id="@ticket.Id" 
                                               class="btn btn-outline-primary" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (ticket.Comments?.Any() == true)
                                            {
                                                <span class="btn btn-outline-info" title="@ticket.Comments.Count comments">
                                                    <i class="fas fa-comments"></i>
                                                    <span class="badge bg-info">@ticket.Comments.Count</span>
                                                </span>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Summary Statistics -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-3">
                                <h5 class="text-primary">@Model.Count</h5>
                                <p class="mb-0 small text-muted">Total Tickets</p>
                            </div>
                            <div class="col-md-3">
                                <h5 class="text-warning">@Model.Count(t => t.Status == "Open" || t.Status == "In Progress")</h5>
                                <p class="mb-0 small text-muted">Active Tickets</p>
                            </div>
                            <div class="col-md-3">
                                <h5 class="text-success">@Model.Count(t => t.Status == "Resolved" || t.Status == "Closed")</h5>
                                <p class="mb-0 small text-muted">Resolved Tickets</p>
                            </div>
                            <div class="col-md-3">
                                <h5 class="text-danger">@Model.Count(t => t.Priority == "High" && (t.Status == "Open" || t.Status == "In Progress"))</h5>
                                <p class="mb-0 small text-muted">Urgent Open Tickets</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-inbox fa-4x text-muted"></i>
            </div>
            <h4 class="text-muted mb-3">No tickets found</h4>
            <p class="text-muted mb-4">You haven't created any tickets yet. Create your first ticket to get started!</p>
            <a asp-action="CreateTicket" class="btn btn-primary btn-lg">
                <i class="fas fa-plus me-2"></i>Create Your First Ticket
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const statusFilter = document.getElementById('statusFilter');
            const priorityFilter = document.getElementById('priorityFilter');
            const table = document.getElementById('ticketsTable');
            
            if (!table) return;
            
            const rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

            function filterTable() {
                const searchTerm = searchInput.value.toLowerCase();
                const statusValue = statusFilter.value;
                const priorityValue = priorityFilter.value;

                Array.from(rows).forEach(row => {
                    const title = row.cells[1].textContent.toLowerCase();
                    const status = row.dataset.status;
                    const priority = row.dataset.priority;

                    const matchesSearch = title.includes(searchTerm);
                    const matchesStatus = !statusValue || status === statusValue;
                    const matchesPriority = !priorityValue || priority === priorityValue;

                    row.style.display = matchesSearch && matchesStatus && matchesPriority ? '' : 'none';
                });
            }

            searchInput.addEventListener('input', filterTable);
            statusFilter.addEventListener('change', filterTable);
            priorityFilter.addEventListener('change', filterTable);
        });
    </script>
}