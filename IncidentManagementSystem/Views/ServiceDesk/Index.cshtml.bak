@using IncidentManagementSystem.Models
@using IncidentManagementSystem.ViewModels
@model ServiceDeskDashboardViewModel
@{
    ViewData["Title"] = "Service Desk Dashboard";
}

<div class="container-fluid">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-headset me-2 text-primary"></i>Service Desk Dashboard
                    </h2>
                    <p class="text-muted mb-0">Monitor and manage all incident tickets across the organization.</p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-action="AllTickets" class="btn btn-outline-primary">
                        <i class="fas fa-list me-2"></i>All Tickets
                    </a>
                    <a asp-action="Analytics" class="btn btn-outline-info">
                        <i class="fas fa-chart-line me-2"></i>Analytics
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.TotalTickets</h4>
                            <p class="mb-0 small">Total Tickets</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-ticket-alt fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-warning text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.OpenTickets</h4>
                            <p class="mb-0 small">Open</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.InProgressTickets</h4>
                            <p class="mb-0 small">In Progress</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-cog fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.ResolvedTickets</h4>
                            <p class="mb-0 small">Resolved</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-danger text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.UrgentTickets</h4>
                            <p class="mb-0 small">Urgent</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-exclamation-triangle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-dark text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.UnassignedTickets</h4>
                            <p class="mb-0 small">Unassigned</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user-times fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Recent Tickets -->
        <div class="col-lg-8 mb-4">
            <div class="card h-100">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-history me-2 text-primary"></i>Recent Tickets
                    </h5>
                    <a asp-action="AllTickets" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentTickets.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Ticket #</th>
                                        <th>Title</th>
                                        <th>Status</th>
                                        <th>Priority</th>
                                        <th>Assigned To</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ticket in Model.RecentTickets)
                                    {
                                        <tr>
                                            <td>
                                                <span class="fw-bold text-primary">#@ticket.Id.Substring(0, 8)</span>
                                            </td>
                                            <td>
                                                <div class="text-truncate" style="max-width: 200px;">
                                                    @ticket.Title
                                                </div>
                                            </td>
                                            <td>
                                                @if (ticket.Status == "Open")
                                                {
                                                    <span class="badge bg-warning">@ticket.Status</span>
                                                }
                                                else if (ticket.Status == "In Progress")
                                                {
                                                    <span class="badge bg-info">@ticket.Status</span>
                                                }
                                                else if (ticket.Status == "Resolved" || ticket.Status == "Closed")
                                                {
                                                    <span class="badge bg-success">@ticket.Status</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@ticket.Status</span>
                                                }
                                            </td>
                                            <td>
                                                @if (ticket.Priority == "High")
                                                {
                                                    <span class="badge bg-danger">@ticket.Priority</span>
                                                }
                                                else if (ticket.Priority == "Medium")
                                                {
                                                    <span class="badge bg-warning">@ticket.Priority</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">@ticket.Priority</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(ticket.AssignedTo))
                                                {
                                                    <span class="text-primary">@ticket.AssignedTo</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Unassigned</span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">@ticket.CreatedAt.ToString("MMM dd, HH:mm")</small>
                                            </td>
                                            <td>
                                                <a asp-action="ViewTicket" asp-route-id="@ticket.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h6 class="text-muted">No tickets yet</h6>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Priority Sections -->
        <div class="col-lg-4">
            <!-- Unassigned Tickets -->
            <div class="card mb-3">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0">
                        <i class="fas fa-user-times me-2"></i>Unassigned Tickets (@Model.UnassignedTicketsList.Count)
                    </h6>
                </div>
                <div class="card-body p-2">
                    @if (Model.UnassignedTicketsList.Any())
                    {
                        @foreach (var ticket in Model.UnassignedTicketsList)
                        {
                            <div class="d-flex justify-content-between align-items-center p-2 mb-2 bg-light rounded">
                                <div class="flex-grow-1">
                                    <div class="fw-bold small">#@ticket.Id.Substring(0, 8)</div>
                                    <div class="text-truncate small" style="max-width: 150px;">@ticket.Title</div>
                                </div>
                                <div class="text-end">
                                    @if (ticket.Priority == "High")
                                    {
                                        <span class="badge bg-danger small">High</span>
                                    }
                                    else if (ticket.Priority == "Medium")
                                    {
                                        <span class="badge bg-warning small">Med</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success small">Low</span>
                                    }
                                    <div>
                                        <a asp-action="ViewTicket" asp-route-id="@ticket.Id" class="btn btn-sm btn-outline-primary mt-1">
                                            <i class="fas fa-eye small"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (Model.UnassignedTickets > 5)
                        {
                            <div class="text-center">
                                <a asp-action="AllTickets" asp-route-status="Open" class="btn btn-sm btn-outline-secondary">
                                    View @(Model.UnassignedTickets - 5) More
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-2">
                            <i class="fas fa-check-circle text-success"></i>
                            <div class="small text-muted">All tickets assigned</div>
                        </div>
                    }
                </div>
            </div>

            <!-- High Priority Tickets -->
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>High Priority Tickets (@Model.HighPriorityTickets.Count)
                    </h6>
                </div>
                <div class="card-body p-2">
                    @if (Model.HighPriorityTickets.Any())
                    {
                        @foreach (var ticket in Model.HighPriorityTickets)
                        {
                            <div class="d-flex justify-content-between align-items-center p-2 mb-2 bg-light rounded">
                                <div class="flex-grow-1">
                                    <div class="fw-bold small">#@ticket.Id.Substring(0, 8)</div>
                                    <div class="text-truncate small" style="max-width: 150px;">@ticket.Title</div>
                                    <div class="small text-muted">
                                        @if (!string.IsNullOrEmpty(ticket.AssignedTo))
                                        {
                                            <span>@ticket.AssignedTo</span>
                                        }
                                        else
                                        {
                                            <span class="text-warning">Unassigned</span>
                                        }
                                    </div>
                                </div>
                                <div class="text-end">
                                    @if (ticket.Status == "Open")
                                    {
                                        <span class="badge bg-warning small">Open</span>
                                    }
                                    else if (ticket.Status == "In Progress")
                                    {
                                        <span class="badge bg-info small">Progress</span>
                                    }
                                    <div>
                                        <a asp-action="ViewTicket" asp-route-id="@ticket.Id" class="btn btn-sm btn-outline-primary mt-1">
                                            <i class="fas fa-eye small"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (Model.UrgentTickets > 5)
                        {
                            <div class="text-center">
                                <a asp-action="AllTickets" asp-route-priority="High" class="btn btn-sm btn-outline-secondary">
                                    View @(Model.UrgentTickets - 5) More
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-2">
                            <i class="fas fa-check-circle text-success"></i>
                            <div class="small text-muted">No urgent tickets</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        transition: box-shadow 0.15s ease-in-out;
    }
    
    .card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }
    
    .table tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.025);
    }
</style>